@model CarRentaManagement.WebUI.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Profil Bilgileri ve Şifre Güncelleme</h4>
                    <br />
                    <form method="post">
                        <label>Adınız</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <br />
                        <label>Soyadınız</label>
                        <input type="text" class="form-control" asp-for="Surname" />
                        <br />
                        <label>Kullanıcı Adnız</label>
                        <input type="text" class="form-control" asp-for="Username" readonly />
                        <br />
                        <label>Email Adresiniz</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                        <label>Şifreniz</label>
                        <input type="password" class="form-control" asp-for="Password" />
                        <br />
                        <label>Şifreniz Tekrar</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword" />
                        <br />
                        <button class="btn btn-success">Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
