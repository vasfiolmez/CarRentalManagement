@model ResultReservationDto
@{
    ViewData["Title"] = "ReservationDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Invoice</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Pages</a></li>
                            <li class="breadcrumb-item active">Invoice</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <h4><b>Car Rental</b></h4>
                            </div>
                            <div class="float-right">
                                <h4 class="m-0 d-print-none">Rezervasyon Detayları</h4>
                            </div>
                        </div>


                        <div class="row mt-4">
                            <div class="col-6">
                                <h6 class="font-weight-bold">TO:</h6>

                                <address class="line-h-24">
                                    <b>@Model.Name @Model.Surname</b><br>
                                    <b> Mail Adresi: @Model.Email</b><br>

                                    <abbr title="Phone">P:</abbr> @Model.Phone
                                </address>
                            </div><!-- end col -->
                            <div class="col-6">
                                <div class="mt-3 float-right">
                                    <p class="mb-2"><strong>Order Date: </strong> @DateTime.Now.DayOfYear</p>
                                    <p class="mb-2"><strong>Order Status: </strong> <span class="badge badge-soft-success">@Model.Status</span></p>
                                </div>
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table mt-4">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Araç Modeli</th>
                                                <th>Günlük</th>
                                                <th>Fiyat</th>
                                                <th class="text-right">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>
                                                    <b>@Model.CarModel</b>
                                                    <br>
                                                    @Model.BrandName
                                                </td>
                                                <td>1</td>
                                                <td>$1799</td>
                                                <td class="text-right">$1799</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="clearfix pt-5">
                                    <h6 class="text-muted">Notes:</h6>

                                    <small>
                                        Faturalar müşterilere özel oluşturulur.
                                    </small>
                                </div>

                            </div>
                            <div class="col-6">
                                <div class="float-right">
                                    <p><b>Sub-total:</b> $4120.00</p>
                                    <p><b>VAT (12.5):</b> $515</p>
                                    <h3>$4635.00 USD</h3>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                        <div class="d-print-none my-4">
                            <div class="text-right">
                                <a href="javascript:window.print()" class="btn btn-primary waves-effect waves-light"><i class="fa fa-print m-r-5"></i> Print</a>
                            </div>
                        </div>
                    </div>
                </div> <!-- end card-->
            </div> <!-- end col -->
        </div>
        <!-- end row -->

    </div> <!-- container-fluid -->
</div>